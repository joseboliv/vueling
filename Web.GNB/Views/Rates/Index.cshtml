@model IEnumerable<Domain.GNB.Dto.RatesDto>
@using Web.GNB.Controllers;
@addTagHelper *,WebGNB
@{
    ViewData["Title"] = "Index";
}

<environment include="Development">
    <link href="~/lib/thirdPartyLibrary/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
</environment>


<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="@nameof(HomeController.Index)">Dashboard</a></li>
    <li class="breadcrumb-item">Rates</li>
</ol>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card"></div>
            <div class="card-header" style="background-color: #25a7c1">
                <div class="row">
                    <div class="col-11">
                        <span class="card-title text-white"><i class="fa fa-table"></i> Rates</span>
                    </div>
                    <div class="col-1">
                        <div class="card-actions float-right text-white cursor-pointer">
                            <a data-action="collapse"><i class="ti-minus"></i></a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
    <div class="content">
        <div class="container-fluid">
            <div class="section-image" data-image="~/img/backgroun/bg5.jpg" ;>
                <div class="row">
                    <div class="col-md-12">
                        <br />
                        <br />
                        <div class="card data-tables">
                            <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                                <div class="toolbar">
                                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                                </div>
                                <div class="fresh-datatables">
                                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.From)</th>
                                                <th>@Html.DisplayNameFor(model => model.To)</th>
                                                <th>@Html.DisplayNameFor(model => model.Rate)</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.From)</th>
                                                <th>@Html.DisplayNameFor(model => model.To)</th>
                                                <th>@Html.DisplayNameFor(model => model.Rate)</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.From)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.To)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Rate)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/thirdPartyLibrary/datatables.net/jquery.dataTables.js"></script>
        <script src="~/lib/thirdPartyLibrary/datatables.net-bs4/js/dataTables.bootstrap4.js"></script>
    </environment>
    <script type="text/javascript">
        //Example usage to this datatables.net
        $(document).ready(function () {
            $('#datatables').DataTable();
        });
    </script>
